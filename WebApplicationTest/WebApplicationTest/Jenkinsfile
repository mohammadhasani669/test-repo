pipeline {
    agent any

    environment {
        PROJECT_PATH = 'WebApplicationTest/WebApplicationTest'
        PUBLISH_DIR = 'publish'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                git branch: 'main', url: 'https://github.com/mohammadhasani669/test-repo.git'
            }
        }

        stage('Restore') {
            steps {
                echo 'üì¶ Restoring NuGet packages...'
                dir("${PROJECT_PATH}") {
                    sh 'dotnet restore'
                }
            }
        }

        stage('Build') {
            steps {
                echo 'üèóÔ∏è Building project...'
                dir("${PROJECT_PATH}") {
                    sh 'dotnet build --configuration Release'
                }
            }
        }

        stage('Publish') {
            steps {
                echo 'üöÄ Publishing project...'
                dir("${PROJECT_PATH}") {
                    sh "dotnet publish -c Release -o ${PUBLISH_DIR}"
                }
            }
        }

        stage('Deploy') {
            when {
                expression { env.DEPLOY_SERVER != null }
            }
            steps {
                echo 'üì° Deploying to remote server...'
                sshagent(['deploy-server-credential']) {
                    sh "scp -r ${PROJECT_PATH}/${PUBLISH_DIR}/* ${DEPLOY_USER}@${DEPLOY_SERVER}:/var/www/webapp/"
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build and publish completed successfully.'
        }
        failure {
            echo '‚ùå Build failed!'
        }
    }
}
